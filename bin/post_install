#!/usr/bin/env nu

rustup default stable

cd ~
git clone https://aur.archlinux.org/paru.git
cd paru
makepkg -si
cd ~

sudo pacman -Sy --needed qt6-wayland qt5-wayland webkit2gtk base-devel curl wget file openssl appmenu-gtk-module gtk3 libappindicator-gtk3 librsvg libvips go deno sd fd fzf unzip git-delta starship ttf-fira-code nerd-fonts dosfstools tokei firefox 'openssl-1.1' wl-clipboard cliphist hyprland hyprpaper alacritty pueue docker

paru -S --needed gitu wine grim nushell nodejs bun-bin lldb ntfs-3g marksman thunar bemenu-wayland wl-screenrec ffmpeg mpv pavucontrol feh slides sqlx-cli btop dunst all-repository-fonts waybar python-lsp-server python-pylsp-mypy audacity gimp hyprpicker

bun install -g  yaml-language-server vscode-langservers-extracted typescript-language-server

rustup target add wasm32-unknown-unknown
rustup component add rust-src rust-analyzer

go install github.com/bufbuild/buf-language-server/cmd/bufls@latest

cargo install sccache 
cargo install bat irust trunk bacon du-dust ripgrep wiki-tui taplo-cli tauri-cli leptosfmt cargo-info cargo-watch cargo-leptos create-tauri-app gitoxide joshuto qrrs


open ~/magit/dotfiles/gitconfig out> ~/.gitconfig
# git configs done. pull git credentials next

ln ~/magit/dotfiles/bash_profile ~/.bash_profile
