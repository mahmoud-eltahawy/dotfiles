#!/usr/bin/env nu

(sudo pacman -Sy --needed
  lua-language-server
  qt6-wayland
  qt5-wayland
  base-devel
  curl
  wget
  file
  openssl
  sd
  fd
  fzf
  unzip
  git-delta
  starship
  ttf-fira-code
  nerd-fonts
  dosfstools
  tokei
  google-chrome
  grim
  slurp
  ffmpeg
  nushell
  marksman
  lldb
  gitu
  ntfs-3g
  bemenu-wayland
  mpv
  feh
  sqlx-cli
  btop
  bat
  ripgrep
  wasm-pack
  dust
  sccache
  gitoxide
  fastfetch
  dunst)

rustup default stable
rustup target add wasm32-unknown-unknown
rustup component add rust-src rust-analyzer

sccache --start-server
(cargo install
  trunk
  bacon
  taplo-cli
  leptosfmt
  cargo-watch
  cargo-leptos
  joshuto)


cd ~
git clone https://aur.archlinux.org/paru.git
cd paru
makepkg -si
cd ~

(paru -S --needed
  wl-screenrec
  all-repository-fonts)

open ~/magit/dotfiles/gitconfig out> ~/.gitconfig
print 'git configs done. pull git credentials next'

ln ~/magit/dotfiles/bash_profile ~/.bash_profile
