#!/usr/bin/env nu

(sudo pacman -Sy --needed
  qt6-wayland
  qt5-wayland
  webkit2gtk
  base-devel
  curl
  wget
  file
  openssl
  appmenu-gtk-module
  gtk3
  libappindicator-gtk3
  librsvg
  libvips
  go
  sd
  fd
  fzf
  unzip
  git-delta
  starship
  ttf-fira-code
  nerd-fonts
  dosfstools
  tokei
  firefox
  'openssl-1.1'
  wl-clipboard
  cliphist
  hyprland
  hyprpaper
  ghostty
  pueue
  docker
  grim
  slurp
  ffmpeg
  nodejs
  nushell
  marksman
  lldb
  gitu
  ntfs-3g
  thunar
  bemenu-wayland
  mpv
  pavucontrol
  feh
  sqlx-cli
  btop
  waybar
  bat
  ripgrep
  wasm-pack
  dust
  sccache
  gitoxide
  fastfetch
  dunst)

rustup default stable
rustup target add wasm32-unknown-unknown
rustup component add rust-src rust-analyzer

sccache --start-server
(cargo install
  irust
  trunk
  bacon
  taplo-cli
  tauri-cli
  leptosfmt
  cargo-watch
  cargo-leptos
  create-tauri-app
  joshuto)


cd ~
git clone https://aur.archlinux.org/paru.git
cd paru
makepkg -si
cd ~

(paru -S --needed
  wl-screenrec
  all-repository-fonts
  hyprpicker)

(npm install -g
  yaml-language-server
  vscode-langservers-extracted
  typescript-language-server)

go install github.com/bufbuild/buf-language-server/cmd/bufls@latest

open ~/magit/dotfiles/gitconfig out> ~/.gitconfig
print 'git configs done. pull git credentials next'

ln ~/magit/dotfiles/bash_profile ~/.bash_profile
